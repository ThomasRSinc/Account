<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/serviceLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:alpha="0.25"
        android:src="@drawable/baseline_hide_image_24"
        android:visibility="visible" />

    <TextView
        android:id="@+id/accountName"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/serviceLogo"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/accountEmail"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/accountName"
        android:textSize="12sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/accountPhone"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/accountEmail"
        android:textSize="12sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/accountSSO"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/accountEmail"
        android:layout_toEndOf="@id/accountName"
        android:visibility="visible"
        android:src="@drawable/baseline_insert_link_24"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/accountUsesPassword"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/accountEmail"
        android:layout_toEndOf="@id/accountSSO"
        android:visibility="visible"
        android:src="@drawable/baseline_password_24"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/accountSecurityEmail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/accountEmail"
        android:layout_toEndOf="@id/accountUsesPassword"
        android:visibility="visible"
        android:src="@drawable/baseline_email_24"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/accountSecurityPhone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/accountPhone"
        android:layout_toEndOf="@id/accountSecurityEmail"
        android:visibility="visible"
        android:src="@drawable/baseline_phone_24"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/accountSecurityKey"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/accountPhone"
        android:layout_toEndOf="@id/accountSecurityPhone"
        android:visibility="visible"
        android:src="@drawable/baseline_key_24"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/accountSecurityApp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/accountPhone"
        android:layout_toEndOf="@id/accountSecurityKey"
        android:visibility="visible"
        android:src="@drawable/baseline_smartphone_24"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/accountSecurityGeneral"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/accountPhone"
        android:layout_toEndOf="@id/accountSecurityApp"
        android:visibility="visible"
        android:src="@drawable/baseline_security_24"
        app:tint="@color/white" />

</RelativeLayout>